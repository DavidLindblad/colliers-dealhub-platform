# Trigger.dev configuration
TRIGGER_IMAGE_TAG=current-deployment-rc.0
TRIGGER_DOMAIN=your-domain.com
TRIGGER_PROTOCOL=https
TRIGGER_API_URL=https://your-domain.com
WEBAPP_PUBLISH_IP=your-ip
DOCKER_PUBLISH_IP=your-ip
RESTART_POLICY=unless-stopped

# OpenTelemetry configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Database configuration
POSTGRES_IMAGE_TAG=16
POSTGRES_USER=your-db-user
POSTGRES_PASSWORD=your-db-password
POSTGRES_DB=your-db-name
DATABASE_HOST=postgres:5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DATABASE_HOST}/${POSTGRES_DB}
DIRECT_URL=${DATABASE_URL}

# Redis configuration
REDIS_IMAGE_TAG=7
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_TLS_DISABLED=true

# Electric configuration
ELECTRIC_IMAGE_TAG=latest

# Registry configuration
DEPLOY_REGISTRY_HOST=your-registry-host:5000
DEPLOY_REGISTRY_NAMESPACE=your-namespace

# Admin Settings
ADMIN_EMAILS="your-admin@email.com"

# Email Settings
EMAIL_TRANSPORT=smtp
FROM_EMAIL=your-email@domain.com
REPLY_TO_EMAIL=your-email@domain.com
SMTP_HOST=your-smtp-host
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
ALERT_FROM_EMAIL=your-alert-email@domain.com

# Concurrency Limits
DEFAULT_ORG_EXECUTION_CONCURRENCY_LIMIT=300
DEFAULT_ENV_EXECUTION_CONCURRENCY_LIMIT=100

# Secrets
MAGIC_LINK_SECRET=your-magic-link-secret
SESSION_SECRET=your-session-secret
ENCRYPTION_KEY=your-encryption-key
PROVIDER_SECRET=your-provider-secret
COORDINATOR_SECRET=your-coordinator-secret
MANAGED_WORKER_SECRET=your-managed-worker-secret

# Worker Settings
HTTP_SERVER_PORT=9020
COORDINATOR_HOST=127.0.0.1
COORDINATOR_PORT=${HTTP_SERVER_PORT}
REGISTRY_HOST=${DEPLOY_REGISTRY_HOST}
REGISTRY_NAMESPACE=${DEPLOY_REGISTRY_NAMESPACE}

# Electric Settings
ELECTRIC_INSECURE=true

# Worker Token
TRIGGER_WORKER_TOKEN=your-worker-token